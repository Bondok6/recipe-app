<%= form_with model: food do |form| %>

  <% if food.errors.any? %>
    <% food.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert">
        <%= message %> 
      </div>
    <% end %>       
  <% end %>
  

 <div class="mb-3">
    <% form.label :name %>
    <%= form.text_field :name, class:"form-control", placeholder:"Enter the name of food" %>
  </div>

  <div class="mb-3">
    <%= form.text_field :measurement_unit, class:"form-control", placeholder:"Enter the measurement unit" %>
  </div>

  <div class="mb-3">
    <%= form.number_field :price, class:"form-control", placeholder:"Enter the price" %>
  </div>

  <div>
      <%= form.submit class:'btn btn-outline-dark w-25' %>
  </div>

<% end %>