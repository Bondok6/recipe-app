<section>
  <h2 class="text-center my-3">Add Ingredient</h2>

  <table class="table table-dark table-striped table-hover text-center">
    <thead class="border">
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Quantity</th>
        <th scope="col">Value</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @foods.each do |food| %>
        <%= form_with model: @recipe_food, url: recipe_recipe_foods_path do |f| %>
          <tr>
            <%= hidden_field_tag 'food_id', food.id %>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td><%= f.number_field :quantity, placeholder: 'Enter the value' %></td>
            <td><%= f.submit 'Add', class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3">
    <%= link_to 'Back' , recipe_path(@recipe),
      class: "btn btn-secondary" %>
  </div>
</section>